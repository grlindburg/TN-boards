{% comment %}
  3D Product Showcase Section - Self-Contained Parallax Version
  - Fixed 3D canvas as background layer
  - Each panel has its own contained scrolling text overlay
  - Text scrolls within the bounds of each 3D scene area
  - Total height: configurable (200-500vh) for scroll distance
{% endcomment %}

{% render 'three-loader' %}

<style>
  /* ========================================
     3D SHOWCASE - MAIN CONTAINER
     ======================================== */

  .hero-3d-showcase {
    position: relative;
    width: 100%;
    height: {{ section.settings.scroll_distance }}vh;
    min-height: 300vh;
  }

  /* ========================================
     FIXED CANVAS LAYER
     ======================================== */

  .hero-3d-showcase__canvas-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 1;
    pointer-events: none;
  }

  .hero-3d-showcase__canvas {
    width: 100%;
    height: 100%;
    display: block;
  }

  /* ========================================
     PANEL OVERLAY SYSTEM
     Each panel is fixed and covers half the viewport,
     matching the 3D scene split. Text scrolls within.
     ======================================== */

  .hero-3d-showcase__panel-overlay {
    position: fixed;
    top: 0;
    height: 100vh;
    z-index: 10;
    overflow: hidden;
    pointer-events: none;
  }

  /* Desktop: Left/Right split */
  .hero-3d-showcase__panel-overlay--left {
    left: 0;
    width: 50%;
  }

  .hero-3d-showcase__panel-overlay--right {
    right: 0;
    width: 50%;
  }

  /* Panel content - this transforms to create scroll effect */
  .hero-3d-showcase__panel-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 0 2rem;
    will-change: transform;
    pointer-events: auto;
  }

  .hero-3d-showcase__panel-overlay--left .hero-3d-showcase__panel-content {
    align-items: flex-start;
    padding-right: 20%;
  }

  .hero-3d-showcase__panel-overlay--right .hero-3d-showcase__panel-content {
    align-items: flex-end;
    padding-left: 20%;
  }

  /* ========================================
     TEXT SECTIONS
     ======================================== */

  .hero-3d-showcase__text-section {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 4rem 0;
    max-width: 380px;
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .hero-3d-showcase__text-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .hero-3d-showcase__panel-overlay--right .hero-3d-showcase__text-section {
    text-align: right;
  }

  .hero-3d-showcase__title {
    font-family: var(--font-heading--family, inherit);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: #fff;
    text-shadow: 0 4px 30px rgba(0, 0, 0, 0.6);
    margin: 0 0 1rem;
    line-height: 1.1;
  }

  .hero-3d-showcase__tagline {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 2px 15px rgba(0, 0, 0, 0.4);
    margin: 0;
    line-height: 1.5;
  }

  .hero-3d-showcase__subtitle {
    font-family: var(--font-heading--family, inherit);
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    font-weight: 600;
    color: #fff;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
    margin: 0 0 1.5rem;
  }

  .hero-3d-showcase__description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.3);
    margin: 0;
  }

  .hero-3d-showcase__feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .hero-3d-showcase__feature-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.125rem;
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.3);
  }

  .hero-3d-showcase__panel-overlay--right .hero-3d-showcase__feature-item {
    flex-direction: row-reverse;
  }

  .hero-3d-showcase__feature-icon {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    flex-shrink: 0;
    font-size: 0.875rem;
  }

  .hero-3d-showcase__cta {
    display: inline-block;
    padding: 1.25rem 3rem;
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 6px;
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    transition: all 0.3s ease;
    margin-top: 1rem;
  }

  .hero-3d-showcase__cta:hover {
    background: rgba(255, 255, 255, 0.22);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  /* Visibility animations are handled via JS class toggling */

  /* ========================================
     LOADING STATE
     ======================================== */

  .hero-3d-showcase__loading {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-size: 1rem;
    z-index: 5;
    text-align: center;
    transition: opacity 0.4s ease;
  }

  .hero-3d-showcase__loading[hidden] {
    opacity: 0;
    pointer-events: none;
  }

  .hero-3d-showcase__loading-spinner {
    width: 48px;
    height: 48px;
    border: 3px solid rgba(255, 255, 255, 0.2);
    border-top-color: #fff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1.5rem;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* ========================================
     SCROLL INDICATOR
     ======================================== */

  .hero-3d-showcase__scroll-indicator {
    position: fixed;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 20;
    color: rgba(255, 255, 255, 0.8);
    text-align: center;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: opacity 0.4s ease;
  }

  .hero-3d-showcase__scroll-indicator svg {
    display: block;
    margin: 0.75rem auto 0;
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .hero-3d-showcase.has-scrolled .hero-3d-showcase__scroll-indicator {
    opacity: 0;
    pointer-events: none;
  }

  /* ========================================
     MOBILE RESPONSIVE
     ======================================== */

  @media (max-width: 767px) {
    /* Mobile: Top/Bottom split for panel overlays */
    .hero-3d-showcase__panel-overlay {
      width: 100%;
      height: 50vh;
    }

    .hero-3d-showcase__panel-overlay--left {
      top: 0;
      left: 0;
    }

    .hero-3d-showcase__panel-overlay--right {
      top: 50vh;
      left: 0;
      right: auto;
    }

    .hero-3d-showcase__panel-content {
      padding: 0 1.5rem;
      align-items: center !important;
    }

    .hero-3d-showcase__panel-overlay--left .hero-3d-showcase__panel-content,
    .hero-3d-showcase__panel-overlay--right .hero-3d-showcase__panel-content {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .hero-3d-showcase__text-section {
      text-align: center;
      max-width: 100%;
      min-height: 50vh;
    }

    .hero-3d-showcase__panel-overlay--right .hero-3d-showcase__text-section {
      text-align: center;
    }

    .hero-3d-showcase__feature-item,
    .hero-3d-showcase__panel-overlay--right .hero-3d-showcase__feature-item {
      flex-direction: row;
      justify-content: center;
    }

    .hero-3d-showcase__title {
      font-size: clamp(1.75rem, 6vw, 2.5rem);
    }

    .hero-3d-showcase__tagline,
    .hero-3d-showcase__description {
      font-size: 1rem;
    }

    .hero-3d-showcase__feature-item {
      font-size: 0.95rem;
    }
  }
</style>

<section
  class="hero-3d-showcase"
  id="showcase-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="hero-3d-showcase"
  data-panels='[
    {%- for block in section.blocks -%}
      {%- if block.type == "product_panel" -%}
        {
          "id": "{{ block.id }}",
          "label": {{ block.settings.label | json }},
          "accentColor": "{{ block.settings.accent_color }}",
          "link": "{{ block.settings.product_link }}",
          "model": "{{ block.settings.model_type }}"
        }{% unless forloop.last %},{% endunless %}
      {%- endif -%}
    {%- endfor -%}
  ]'
>
  <!-- Loading indicator -->
  <div class="hero-3d-showcase__loading" id="loading-{{ section.id }}">
    <div class="hero-3d-showcase__loading-spinner"></div>
    <span>Loading 3D Experience...</span>
  </div>

  <!-- Fixed 3D Canvas -->
  <div class="hero-3d-showcase__canvas-wrapper" id="canvas-wrapper-{{ section.id }}">
    <canvas class="hero-3d-showcase__canvas" id="canvas-{{ section.id }}"></canvas>
  </div>

  <!-- Panel Overlays - Each contains scrolling text for its 3D scene area -->
  {% for block in section.blocks %}
    {% if block.type == "product_panel" %}
      <div class="hero-3d-showcase__panel-overlay hero-3d-showcase__panel-overlay--{% if forloop.first %}left{% else %}right{% endif %}"
           data-panel-index="{{ forloop.index0 }}"
           {{ block.shopify_attributes }}>

        <div class="hero-3d-showcase__panel-content">
          <!-- Product Title Section -->
          <div class="hero-3d-showcase__text-section" data-section-index="0">
            <h2 class="hero-3d-showcase__title">{{ block.settings.label }}</h2>
            {% if block.settings.tagline != blank %}
              <p class="hero-3d-showcase__tagline">{{ block.settings.tagline }}</p>
            {% endif %}
          </div>

          <!-- Features Section -->
          {% if block.settings.feature_1 != blank or block.settings.feature_2 != blank or block.settings.feature_3 != blank %}
            <div class="hero-3d-showcase__text-section" data-section-index="1">
              <h3 class="hero-3d-showcase__subtitle">What's Included</h3>
              <ul class="hero-3d-showcase__feature-list">
                {% if block.settings.feature_1 != blank %}
                  <li class="hero-3d-showcase__feature-item">
                    <span class="hero-3d-showcase__feature-icon">&#10003;</span>
                    <span>{{ block.settings.feature_1 }}</span>
                  </li>
                {% endif %}
                {% if block.settings.feature_2 != blank %}
                  <li class="hero-3d-showcase__feature-item">
                    <span class="hero-3d-showcase__feature-icon">&#10003;</span>
                    <span>{{ block.settings.feature_2 }}</span>
                  </li>
                {% endif %}
                {% if block.settings.feature_3 != blank %}
                  <li class="hero-3d-showcase__feature-item">
                    <span class="hero-3d-showcase__feature-icon">&#10003;</span>
                    <span>{{ block.settings.feature_3 }}</span>
                  </li>
                {% endif %}
              </ul>
            </div>
          {% endif %}

          <!-- Description Section -->
          {% if block.settings.description != blank %}
            <div class="hero-3d-showcase__text-section" data-section-index="2">
              <p class="hero-3d-showcase__description">{{ block.settings.description }}</p>
            </div>
          {% endif %}

          <!-- CTA Section -->
          <div class="hero-3d-showcase__text-section" data-section-index="3">
            {% if block.settings.product_link != blank %}
              <a href="{{ block.settings.product_link }}" class="hero-3d-showcase__cta">
                {{ block.settings.cta_text | default: 'Shop Now' }}
              </a>
            {% else %}
              <a href="#" class="hero-3d-showcase__cta">
                {{ block.settings.cta_text | default: 'Shop Now' }}
              </a>
            {% endif %}
          </div>
        </div>

      </div>
    {% endif %}
  {% endfor %}

  <!-- Scroll Indicator -->
  <div class="hero-3d-showcase__scroll-indicator">
    <span>Scroll to explore</span>
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M5 12l7 7 7-7"/>
    </svg>
  </div>
</section>

<script src="{{ 'three-product-showcase.js' | asset_url }}" type="module"></script>

